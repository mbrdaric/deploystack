mixin sentry-signup
  a.btn.btn-primary.u-bold(rel="nofollow" target="_blank", href="https://sentry.io?utm_source=deploystack") Open Sentry
mixin rollbar-signup
  a.btn.btn-primary.u-bold(rel="nofollow" target="_blank", href="https://rollbar.com/") Open Rollbar
mixin airbrake-signup
  a.btn.btn-primary.u-bold(rel="nofollow" target="_blank", href="https://airbrake.io/") Open Airbrake
